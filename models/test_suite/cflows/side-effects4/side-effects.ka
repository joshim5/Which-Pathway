%def: "displayCompression" "weak" "none"
%def: "showIntroEvents" "true" 

%var: 'goal' 0 
%var: 'bad' 1
A(x!_) -> A(x) @ 'bad'
A(x!_) -> A(x),C() @ 'goal'
A(x),B(x) -> A(x!1),B(x!1) @1
A(x),B(x) -> A(x!1),B(x!1) @1
'GOAL' A(x!1),B(x~1!1),C() -> @1 

%init: 1 A(x!1),B(x~1!1)
%init: 10 B(x~0)

%mod: [true] do $TRACK 'GOAL' [true]
%mod: [T]>10 do ($UPDATE 'bad' 0;$UPDATE 'goal' 1)

%agent: A(x)
%agent: B(x~0~1)
%agent: C()
